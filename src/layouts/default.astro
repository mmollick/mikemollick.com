---
import { Image } from "astro:assets";
import headshot from "../headshot-default-2021.jpg";
import LinkedInIcon from "../icons/LinkedIn.svg?raw";
import GitHubIcon from "../icons/GitHub.svg?raw";
const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <title>
      {frontmatter.title ?? "Product Engineer & Founder"} | Mike Mollick
    </title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Serif:ital,wght@0,400;0,700;1,400&family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <style is:inline>
      footer a > svg {
        height: 1.4rem;
        width: 1.4rem;
      }
    </style>
  </head>
  <body
    class="bg-black text-white bg-[radial-gradient(ellipse_at_top_left,_var(--tw-gradient-stops))] from-gray-950 via-blue-950 to-purple-950"
  >
    <section
      class="lg:pl-32 lg:pt-16 lg:pr-0 p-8 pt-8 max-w-4xl flex flex-col justify-between h-svh"
    >
      <div>
        <header class="mb-8 flex gap-6 flex-col md:flex-row">
          <a href="#">
            <Image
              src={headshot}
              alt="Mike mollick headshot"
              width="75"
              class="rounded-full drop-shadow-md text-center"
            />
          </a>
          <section class="flex flex-col justify-center">
            <h1 class="text-4xl font-bold tracking-wide">Mike Mollick</h1>
          </section>
        </header>
        <article class="prose prose-invert font-serif"><slot /></article>
      </div>
      <footer>
        <nav class="flex gap-2 items-center">
          <a
            href="https://github.com/mmollick"
            class="inline-block text-white text-opacity-60 hover:text-opacity-100"
            title="GitHub Profile"
          >
            <Fragment set:html={GitHubIcon} />
          </a>
          <a
            href="http://www.linkedin.com/in/michaelmollick"
            class="inline-block text-white text-opacity-60 hover:text-opacity-100"
            title="LinkedIn Profile"
          >
            <Fragment set:html={LinkedInIcon} />
          </a>
          <span class="text-xs block font-light text-white text-opacity-60"
            >&copy {new Date().getFullYear()} Mike Mollick
          </span>
        </nav>
      </footer>
    </section>
  </body>
</html>
